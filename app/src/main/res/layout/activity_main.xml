<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        android:baselineAligned="false">

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/main_button1"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@drawable/main_ex1"
                android:scaleType="centerCrop"
                android:focusable="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_text1"
                android:layout_alignBottom="@id/main_button1"
                android:layout_alignStart="@id/main_button1"
                android:layout_alignEnd="@id/main_button1"
                android:layout_alignTop="@id/main_button1"
                android:gravity="center"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/main_button2"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@drawable/main_ar1"
                android:scaleType="centerCrop"
                android:focusable="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_text2"
                android:layout_alignBottom="@id/main_button2"
                android:layout_alignStart="@id/main_button2"
                android:layout_alignEnd="@id/main_button2"
                android:layout_alignTop="@id/main_button2"
                android:gravity="center"/>
    </RelativeLayout>
</LinearLayout>