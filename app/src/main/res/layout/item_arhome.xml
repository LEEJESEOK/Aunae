<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="150dp"
                                             android:id="@+id/background">

    <ImageView
            android:id="@+id/itemImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/horizontal_test2"
            android:scaleType="fitCenter"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_white_arrow"
            android:id="@+id/leftImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintLeft_toLeftOf="@+id/itemImage"
            android:layout_marginTop="75dp"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_white_arrow"
            android:id="@+id/rightImage"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintRight_toRightOf="@+id/itemImage"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"/>

    <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/itemImage"
            app:layout_constraintLeft_toLeftOf="@+id/itemImage"
            android:layout_marginTop="75dp"
            android:layout_marginStart="200dp"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>